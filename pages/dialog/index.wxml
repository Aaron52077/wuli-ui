<import src="/components/dialog/index.wxml" />

<view class="container">

    <view class="doc-title wuli-hairline--bottom">DIALOG</view>
    <view class="doc-description">弹出层</view>
    <view class="wuli-btns" style="margin-top: 30vh;">
      <button class="wuli-btn" bindtap="toggleBaseDialog">
        基础 Dialog
      </button>
      <button class="wuli-btn" bindtap="toggleWithoutTitleDialog">
        Dialog - 无标题
      </button>
      <button class="wuli-btn" bindtap="toggleButtonDialog">
        Dialog - 自定义显示按钮
      </button>
      <button class="wuli-btn" bindtap="toggleVerticalDialog">
        Dialog - 按钮纵向排布
      </button>
    </view>
  
  </view>
  
  <template is="wuli-dialog" data="{{ wuliDialog }}"></template>